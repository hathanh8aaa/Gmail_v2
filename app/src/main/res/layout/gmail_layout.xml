<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/first_character"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@drawable/first_character_background"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/first_character"
        android:layout_alignTop="@+id/first_character"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/first_character"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/star_favourite"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/first_character"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_star_border" />


    <TextView
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toLeftOf="@id/star_favourite"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/first_character"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/content_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject"
        android:layout_alignLeft="@id/subject"
        android:layout_alignBottom="@id/first_character"
        android:layout_toRightOf="@id/first_character"
        android:layout_toLeftOf="@id/star_favourite"
        android:singleLine="true"
        android:textSize="15dp" />


</RelativeLayout>